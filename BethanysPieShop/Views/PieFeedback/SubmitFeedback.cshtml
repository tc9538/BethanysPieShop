@model PieFeedback
<form method="post" class="form-horizontal" role="form">
    <h2>Pie Feedback </h2>
    <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-control" rows="1" cols="5" id="name" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Feedback"></label>
        <textarea asp-for="@Model.Feedback" class="form-control" rows="5" cols="5"></textarea>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Submit feedback" asp-controller="PieFeedback" asp-action="SubmitFeedback" />
        </div>
     </div>
        
</form>
   